{
  "name": "mylaragon",
  "private": true,
  "version": "0.0.0",  "description": "A modern and lightweight companion app for Laragon",
  "author": "msoler75",  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npx kill-port 5173 && vite --port 5173 --strictPort\" \"wait-on http://localhost:5173 --timeout 20000 && npm run electron\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "vite": "vite",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.mylaragon.app",
    "productName": "MyLaragon",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MyLaragon"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-react": "^5.1.2",
    "chrome-devtools-mcp": "^0.12.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.0.0",
    "vite": "npm:rolldown-vite@7.2.5",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
