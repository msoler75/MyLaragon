{
  "name": "webservdev",
  "private": true,
  "version": "1.0.0",
  "description": "A modern and lightweight local server environment for web developers",
  "author": "msoler75",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"node src/api/dev-server.js\" \"npx kill-port 5173 && wait-on http://localhost:5174/health --timeout 10000 && vite --port 5173 --strictPort\" \"wait-on http://localhost:5173 --timeout 20000 && npm run neutralino-dev\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "neutralino-dev": "cd neutralino && node dev.js",
    "vite": "vite",
    "setup:links": "node scripts/sync-resources.js create",
    "clean:links": "node scripts/sync-resources.js remove",
    "prebuild": "node scripts/sync-resources.js check",
    "dist": "node scripts/build-config.js build && npm run build && cd neutralino && npx @neutralinojs/neu build && cd .. && node scripts/build-config.js restore",
    "test:configs": "node scripts/auto_test_configs.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:api": "vitest run tests/api-endpoints.spec.js",
    "test:unit": "vitest run --exclude tests/api-endpoints.spec.js",
    "test:slow": "cross-env RUN_SLOW=1 vitest run tests/slow.spec.js",
    "test:install": "cross-env RUN_SLOW=1 vitest run tests/slow.install.spec.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@neutralinojs/lib": "^6.4.0",
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-react": "^5.1.2",
    "chrome-devtools-mcp": "^0.12.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "express": "^5.2.1",
    "globals": "^16.5.0",
    "kill-port": "^2.0.1",
    "tailwindcss": "^4.0.0",
    "vite": "npm:rolldown-vite@7.2.5",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
